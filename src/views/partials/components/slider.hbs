{{#json
'{
  "slides": [
    {
      "title": "All in a day",
      "slug": "/newpage",
      "image": "./src/assets/120045.jpg"
    },
    {
      "title": "Tuesday tunes",
      "slug": "/player",
      "image": "./src/assets/image2.jpg"
    }
  ]
}'
}}
  <div class="slider-wrapper">
    {{#each slides }}
      <div class="slide" data-slide-index={{@index}}>
        <div class="slide__image">
          <a href="{{this.slug}}"><img src="{{this.image}}" alt=""></a>
        </div>
        <div class="slide__content">
          <h2 class="slide__title">{{this.title}}</h2>
          <p class="slide__copy">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Unde facilis non numquam, maxime minima quas possimus ullam dolorem recusandae! Quo!
          </p>
        </div>
      </div>
    {{/each}}
  </div>
{{/json}}
